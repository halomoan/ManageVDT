<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="addNodeDialog" title="Dimension: Entity" contentWidth="50rem">
		<content>
			<Tree id="MstTree"
				items="{path: 'odata>/MstHiers', parameters: { operationMode: 'Client', useServersideApplicationFilters: false }, events: { change: '.onTreeChange' } }"
				mode="MultiSelect" includeItemInSelection="false" noDataText="{i18>noDataText}" showNoData="true">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Nodes" level="H2"/>
							<ToolbarSpacer/>
							<SearchField id="searchTree" value="{search>/query}" liveChange="onTreeFilter">
								<layoutData><OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
							</SearchField>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<StandardTreeItem title="{odata>Description}" />
			</Tree>
		</content>
		<beginButton>
			<Button text="Ok" press="onConfirmAddNode"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelAddNode"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>