<mvc:View controllerName="uol.bpc.ManageVDT.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.suite.ui.commons.networkgraph"
	displayBlock="true" height="100%">
	<Graph enableWheelZoom="false" id="graph" nodes="{/nodes}" lines="{/lines}">
		<nodes>
			<Node key="{key}" title="{title}" icon="{icon}" attributes="{path:'attributes', templateShareable:true}" showActionLinksButton="false"
				showDetailButton="false" showExpandButton="true" status="{status}" shape="Box" press="hoverNode">
				<attributes>
					<ElementAttribute label="{label}" value="{value}"/>
				</attributes>
				<actionButtons>
				<ActionButton
							icon="sap-icon://settings"
							title="Setting"
							press="onOpenVDTNodeSetting"/>
				</actionButtons>
			</Node>
		</nodes>
		<lines>
			<Line from="{from}" to="{to}" status="Information"></Line>
		</lines>
	</Graph>
</mvc:View>