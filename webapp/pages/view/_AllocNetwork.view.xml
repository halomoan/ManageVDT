<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:t="sap.ui.table" xmlns="sap.m"
	controllerName="uol.bpc.ManageVDT.pages.controller.AllocNetwork" displayBlock="true" height="100%">
	<f:DynamicPage id="allocPage" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Allocation ({odata>/AllocationSet?$count})"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Content -->
		<f:content>
			<List items="{path: 'odata>/AllocationSet'}">
				<CustomListItem>
					<Panel expandable="true" headerText="{odata>Name}" width="100%">
						<content>
							<t:Table id="table" rows="{odata>Items}" selectionMode="MultiToggle" visibleRowCount="7" ariaLabelledBy="title">
								<t:extension>
									<OverflowToolbar>
										<Title id="title" text="Name"/>
									</OverflowToolbar>
								</t:extension>
								<t:columns>
									<t:Column >
										<Label text="Allocation Rule"/>
										<t:template>
											<Text text="{odata>Name}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column width="11rem">
										<Label text="Allocation Method"/>
										<t:template>
											<Text text="{odata>Method}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column width="7rem" hAlign="Center">
										<Label text="Intercompany"/>
										<t:template>
											<CheckBox selected="{ path: 'odata>IntercoRule', type: 'sap.ui.model.type.Boolean' }"/>
										</t:template>
									</t:Column>
									<t:Column width="6rem" hAlign="Center">
										<Label text="Active"/>
										<t:template>
											<CheckBox selected="{ path: 'odata>Active', type: 'sap.ui.model.type.Boolean' }"/>
										</t:template>
									</t:Column>
									<t:Column >
										<Label text="Version"/>
										<t:template>
											<Text text="" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column >
										<Label text="Dependency"/>
										<t:template>
											<Text text="" wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</content>
					</Panel>
				</CustomListItem>
			</List>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>