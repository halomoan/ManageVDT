<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m"
	controllerName="uol.bpc.ManageVDT.pages.controller.AllocDetail">
	<VBox>
		<List id="inputdimlist" items="{path: 'viewData>/inputparam/dimlist'}" class="sapUiTinyMarginBottom">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="Dimension" level="H2"/>
					<ToolbarSpacer/>
						<Button
					icon="sap-icon://add-activity"
					press="onSelectDimension('inputparam')" />
				</OverflowToolbar>
			</headerToolbar>
			<CustomListItem>
				<HBox>
					<core:Icon size="2rem" src="sap-icon://add-filter" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
						<Link text="{viewData>Name}" target="{viewData>ID}" press="onOpenDimSelect" customData:dataref="inputparam"/>
						<ExpandableText class="sapUiTinyMarginBottom sapUiTinyMarginTop" text="{viewData>Value}" overflowMode="Popover"/>
					</VBox>
				</HBox>
			</CustomListItem>
		</List>
		<FlexBox alignItems="Center" justifyContent="End">
			<Label text="Apply On Cummulative Data" class="sapUiTinyMarginEnd"/>
			<Switch state="{viewData>/inputparam/isCumulative}" customTextOn="Yes" customTextOff="No"/>
		</FlexBox>
		<Label text="Input Type" labelFor="inputType"/>
		<ComboBox id="inputType" selectedKey="{viewData>/inputparam/type}" selectionChange="onInputTypeChange">
			<core:Item key="byfactor" text="By Factor"/>
			<core:Item key="byvalue" text="By Value"/>
		</ComboBox>
		<StepInput value="{viewData>/inputparam/factor}" displayValuePrecision="true" min="1" max="99" width="2rem" step="1" largerStep="{largerStep}"
			stepMode="{stepMode}" valueState="{valueState}" enabled="{enabled}" editable="{editable}" description="{description}"
			fieldWidth="{fieldWidth}" textAlign="{textAlign}" validationMode="{validationMode}" change="onChange"/>
	</VBox>
</mvc:View>