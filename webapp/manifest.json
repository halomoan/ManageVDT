{
	"_version": "1.7.0",
	"sap.app": {
		"id": "uol.bpc.ManageVDT",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "servicecatalog.connectivityComponent",
			"version": "0.0.0"
		},
		"dataSources": {
			"MyNodes": {
				"uri": "/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0",
					"localUri": "localService/metadata.xml"
				}
			}
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": ["sap_hcb", "sap_belize"]
	},
	"sap.ui5": {
		"rootView": {
			"viewName": "uol.bpc.ManageVDT.view.App",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {},
				"sap.ushell": {},
				"sap.collaboration": {},
				"sap.ui.comp": {},
				"sap.uxap": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "uol.bpc.ManageVDT.i18n.i18n"
				}
			},
			"odata": {
				"type": "sap.ui.model.odata.v2.ODataModel",
				"dataSource": "MyNodes",
				"settings": {
					"defaultBindingMode": "TwoWay",
					"preliminaryContext": true
				},
				"preload": true
			},
			"search": {
				"type": "sap.ui.model.json.JSONModel"
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "uol.bpc.ManageVDT.pages.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true,
				"bypassed": {
					"target": "notFound"
				}
			},
			"routes": [{
				"pattern": "driverNetwork/{drivername}",
				"name": "driverNetwork",
				"target": "driverNetwork"
			}, 
			
			{
				"pattern": "flexColumnLayout/{allocname}/:item:",
				"name": "flexColumnLayout",
				"target": [
					"allocNetwork",
					"allocDetail"
					]
			},
			{
				"pattern": "allocNetwork/{allocname}",
				"name": "allocNetwork",
				"target": "allocNetwork"
			}],
			"targets": {
				"driverNetwork": {
					"viewId": "driverNetwork",
					"viewName": "DriverNetwork",
					"viewLevel": 1
				},
				"flexColumnLayout": {
					"viewId": "flexColumnLayout",
					"viewName": "FlexibleColumnLayout",
					"viewLevel": 2
				},
				"allocNetwork": {
					"parent": "flexColumnLayout",
					"viewId": "allocNetwork",
					"viewName": "AllocNetwork",
					"controlId": "fcl",
					"controlAggregation": "beginColumnPages"
				},
				"allocDetail": {
					"parent": "flexColumnLayout",
					"viewId": "allocDetail",
					"viewName": "AllocDetail",
					"controlId": "fcl",
					"controlAggregation": "midColumnPages"
				},
				"notFound": {
					"viewId": "notFound",
					"viewName": "NotFound",
					"transition": "show"
				}
			}
		}
	}
}